---
import { getCollection } from "astro:content";

import Hero from "@/components/Hero.astro";
import NewsList from "@/components/NewsList.astro";
import Sheet from "@/components/Sheet.astro";
import { NEWS_LIST_LIMIT } from "@/constants/index";
import Layout from "@/layouts/Layout.astro";

const news = (await getCollection("news")).slice(0, NEWS_LIST_LIMIT);
---

<Layout title="ニュース｜シンプルなコーポレートサイト">
  <Hero title="News" sub="ニュース" />
  <Sheet>
    <NewsList articles={news} />
    <!-- TODO: <Pagination totalCount={data.totalCount} basePath="/news" /> -->
  </Sheet>
</Layout>
