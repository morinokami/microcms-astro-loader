---
interface Props {
  href: string;
  isExternal?: boolean;
}

const { href, isExternal } = Astro.props;
---

{
  isExternal ? (
    <a href={href} class="button" target="_blank" rel="noopener">
      <slot />
    </a>
  ) : (
    <a href={href} class="button">
      <slot />
    </a>
  )
}

<style>
  .button {
    display: block;
    padding: 20px 40px;
    border-radius: var(--border-radius);
    width: 300px;
    background:
      url("/arrow-right.svg") no-repeat right 20px center,
      var(--color-button-primary);
    color: var(--color-text-unpainted);
  }

  .button:hover {
    opacity: 0.9;
  }

  @media (max-width: 640px) {
    .button {
      padding: 16px 24px;
      width: 100%;
    }
  }
</style>
